<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/background_book"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#000000">

        <ImageView
            android:id="@+id/background_image_book"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@mipmap/flower" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/background_image_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="3dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/background_profile_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/background_image_profile"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_profile_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Nguyễn Hồng Phong"
            android:textAlignment="center"
            android:textColor="#6a737b"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_edit_profile_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:text="Thêm tiểu sử tạm thời"
            android:textAlignment="center"
            android:textColor="#db3552"
            android:textSize="13dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/background_information_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/background_profile_name"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/background_edit_infomation_profile"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/background_edit_single_page"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/image_edit_single_page"
                    android:layout_width="47dp"
                    android:layout_height="34dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/txt_edit_single_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_edit_single_page"
                    android:text="Chỉ sửa trang cá nhân"
                    android:textAlignment="center"
                    android:textSize="11dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/background_view_list_activity_history"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/image_view_list_activity_history"
                    android:layout_width="47dp"
                    android:layout_height="34dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/txt_view_list_activity_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_view_list_activity_history"
                    android:text="Chỉ sửa trang cá nhân"
                    android:textAlignment="center"
                    android:textSize="11dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/background_more"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/image_view_more"
                    android:layout_width="47dp"
                    android:layout_height="34dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/txt_view_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_view_more"
                    android:text="Theme"
                    android:textAlignment="center"
                    android:textSize="11dp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/background_view_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/background_view_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BBBBBB"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_introduce"
                android:layout_width="143dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:text="Giới Thiệu"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_picture"
                android:layout_width="123dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:text="Ảnh"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_friend"
                android:layout_width="143dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:text="Bạn bè"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>